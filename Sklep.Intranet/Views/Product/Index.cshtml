@model IEnumerable<Sklep.Data.Models.Product>

@{
    ViewData["Title"] = "Produkty";
}

<h2>Lista produktów</h2>
<div>
    <a class="mdl-button mdl-button--raised mdl-button--colored" asp-action="Create">
        Dodaj
    </a>
</div>
<div class="mdl-grid">
    @foreach (var product in Model)
    {
        <div class="mdl-cell mdl-cell--4-col">
            <div class="product-card mdl-card mdl-shadow--2dp">
                <div class="mdl-card__title">
                    <h2 class="mdl-card__title-text">@product.Name</h2>
                </div>
                <div class="mdl-card__supporting-text">
                    <p>Cena: @product.Price</p>
                    <p>Ilość: @product.Quantity</p>
                    <p>Aktywny: @(product.IsActive ? "Tak" : "Nie")</p>
                    <p>Rodzaj: @product.Rodzaj.Nazwa</p>
                </div>
                <div class="mdl-card__actions mdl-card--border">
                    <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" asp-action="Edit" asp-route-id="@product.Id">Edytuj</a>
                    @*<a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" href="#">
                        Edytuj
                    </a>*@
                    <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" href="#">
                        Szczegóły
                    </a>
                    <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" href="#">
                        Usuń
                    </a>
                </div>
            </div>
        </div>
    }
</div>
