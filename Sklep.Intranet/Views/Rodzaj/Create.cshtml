@model Sklep.Data.Models.Rodzaj

@{
    ViewData["Title"] = "Create";
}

<h1>Create Rodzaj</h1>

<form asp-action="Create" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Nazwa" class="control-label">Nazwa</label>
        <input asp-for="Nazwa" class="form-control" />
        <span asp-validation-for="Nazwa" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="Opis" class="control-label">Opis</label>
        <textarea asp-for="Opis" class="form-control"></textarea>
        <span asp-validation-for="Opis" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label">Obraz</label>
        <input type="file" name="RodzajImageFile" class="form-control-file" />
        <span asp-validation-for="RodzajImagePath" class="text-danger"></span>
    </div>

    
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>
