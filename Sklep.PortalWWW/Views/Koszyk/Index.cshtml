@model Sklep.PortalWWW.Models.Sklep.DaneDoKoszyka
@{
    ViewData["Title"] = "Koszyk";
    Layout = "~/Views/Shared/_KoszykLayout.cshtml";
}

<section class="h-100 h-custom" style="background-color: #eee;">
<div class="container h-100 py-5">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col">
            <div class="card shopping-cart" style="border-radius: 15px;">
                <div class="card-body text-black">

                    <div class="row">
                        <div class="col-lg-6 px-5 py-4">

                            <h3 class="mb-5 pt-2 text-center fw-bold text-uppercase">Twoje produkty</h3>

                            @foreach (var product in Model.ElementyKoszyka)
                            {
                                    <div class="d-flex align-items-center mb-5">
                                   @foreach (var image in product.Towar.Images)
                                    {
                                        <div class="flex-shrink-0">
                                                <img src="/images/@image.ImagePath"
                                                 class="img-fluid" style="width: 150px;" alt="Generic placeholder image">
                                        </div>
                                        break;
                                    }
                               
                                    
                                    <div class="flex-grow-1 ms-3">
                                        <a href="#!" class="float-end text-black"><i class="fas fa-times"></i></a>
                                        <h5 class="text-primary">@product.Towar.Name</h5>
                                        <div class="d-flex align-items-center">
                                            <p class="fw-bold mb-0 me-5 pe-3">@product.Towar.Price</p>
                                            <div class="def-number-input number-input safari_only">
                                                <button onclick="this.parentNode.querySelector('input[type=number]').stepDown()"
                                                        class="minus"></button>
                                                <input class="quantity fw-bold text-black" min="0" name="quantity" value="@product.Ilosc"
                                                       type="number">
                                                <button onclick="this.parentNode.querySelector('input[type=number]').stepUp()"
                                                        class="plus"></button>
                                                    <a href="@Url.Action("UsunZKoszyka", "Koszyk", new { id = product.Towar.Id })">Usuń</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }



                            <hr class="mb-4" style="height: 2px; background-color: #1266f1; opacity: 1;">

                            <div class="d-flex justify-content-between px-x">
                                <p class="fw-bold">Przesyłka:</p>
                                <p class="fw-bold">10 PLN</p>
                            </div>
                            <div class="d-flex justify-content-between p-2 mb-2" style="background-color: #e1f5fe;">
                                <h5 class="fw-bold mb-0">Razem:</h5>
                                <h5 class="fw-bold mb-0">@Model.Razem PLN</h5>
                            </div>

                        </div>
                        <div class="col-lg-6 px-5 py-4">

                            <h3 class="mb-5 pt-2 text-center fw-bold text-uppercase">Płatność</h3>

                            <form class="mb-5">

                                <div class="form-outline mb-5">
                                    <input type="text" id="typeText" class="form-control form-control-lg" siez="17"
                                           value="" minlength="19" maxlength="19" />
                                    <label class="form-label" for="typeText">Numer karty</label>
                                </div>

                                <div class="form-outline mb-5">
                                    <input type="text" id="typeName" class="form-control form-control-lg" siez="17"
                                           value="" />
                                    <label class="form-label" for="typeName">Bank</label>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 mb-5">
                                        <div class="form-outline">
                                            <input type="text" id="typeExp" class="form-control form-control-lg" value="01/22"
                                                   size="7" id="exp" minlength="7" maxlength="7" />
                                            <label class="form-label" for="typeExp">Ważność karty</label>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-5">
                                        <div class="form-outline">
                                            <input type="password" id="typeText" class="form-control form-control-lg"
                                                   value="" size="1" minlength="3" maxlength="3" />
                                            <label class="form-label" for="typeText">Cvv</label>
                                        </div>
                                    </div>
                                </div>

                                <p class="mb-5">
                                    Lorem ipsum dolor sit amet consectetur, adipisicing elit <a href="#!">obcaecati sapiente</a>.
                                </p>

                                    <button type="button" class="btn btn-primary btn-block btn-lg" onclick="window.location.href='@Url.Action("Zamowienie", "Koszyk")'">
                                        Kup teraz
                                    </button>
                                    <button type="button" class="btn btn-primary btn-block btn-lg" onclick="window.location.href='@Url.Action("Index", "Sklep")'">
                                        Wróć do sklepu
                                    </button>


                                @*<a class="fw-bold mb-5" style="position: absolute; bottom: 0;">
                                    <a href=""><i class="fas fa-angle-left me-2">@Html.ActionLink("Wróć do sklepu","Index","Sklep")</i></a>
                                </a>*@

                            </form>

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
</section>